pipeline {
    agent { label 'node1' }
    
    stages {
        stage('scm') {
            steps {
                git url: 'https://github.com/GitPracticeRepo/spring-petclinic.git', branch: 'main'
            }
        }
        stage('build') {
            steps {
               
                withSonarQubeEnv(installationName: 'SONAR_9.8', envOnly: true, credentialsId: 'SONAR_KEY') {
                    sh "/usr/local/apache-maven-3.8.6/bin/mvn clean package sonar:sonar"
					echo "${env.SONAR_HOST_URL}"
                }
            }
        }
    }
}